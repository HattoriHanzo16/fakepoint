{
  "name": "fakepoint",
  "version": "1.0.0",
  "description": "A tool for creating fake API endpoints for development",
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "build": "npm run build --workspace=packages/server && npm run build --workspace=packages/client",
    "start": "npm run start --workspace=packages/server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["api", "mock", "fake", "development", "endpoints"],
  "author": "",
  "license": "MIT"
} 